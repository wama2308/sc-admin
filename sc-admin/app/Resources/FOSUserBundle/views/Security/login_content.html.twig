{% trans_default_domain 'FOSUserBundle' %}

<div class="page login-page">
    {% if error %}
        <div class="alert alert-danger" role="alert" style="width: 572px; left: 49%; top: 10%; transform: translate(-50%, -50%);-webkit-transform: translate(-50%, 200%);">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}
    <br>
    <br>
    <br>
    <br>
    <br>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card-group">
                    <div class="card p-4">
                        <div class="card-body">
                            <form action="{{ path("fos_user_security_check") }}" method="post" class="text-left form-validate">
                                {% if csrf_token %}
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                                {% endif %}
                                <h1>Login</h1>
                                <p class="text-muted">Sign In to your account</p>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="icon-user"></i>
                                        </span>
                                    </div>
                                    <input id="username" type="text" name="_username" value="{{ last_username }}" required="required" style="width: 86%">
                                </div>
                                <div class="input-group mb-4">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="icon-lock"></i>
                                        </span>
                                    </div>
                                    <input id="password" type="password" name="_password" required="required" style="width: 86%">
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <button class="btn btn-primary px-4" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" >Login</button>
                                    </div>
                                    <div class="col-6 text-right">
                                        <a href="{{ path("fos_user_resetting_check_email") }}" class="btn btn-link px-0">Forgot Password?</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%">
                        <div class="card-body text-center">
                            <div>
                                <h2>Sign up</h2>
                                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
{#                                <button class="btn btn-primary active mt-3" type="button">Register Now!</button>#}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>