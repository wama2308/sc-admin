{% extends '@App/base.html.twig' %}

{% block ol %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('homepage') }}">Home</a>
        </li>
        <li class="breadcrumb-item active">
            <a href="{{ path('country_list') }}">Country</a>
        </li>
        <li class="breadcrumb-item active">Details</li>
        <!-- Breadcrumb Menu-->
        <li class="breadcrumb-menu d-md-down-none">
            {#<div class="btn-group" role="group" aria-label="Button group">
                <a class="btn" href="#">
                    <i class="icon-speech"></i>
                </a>
                <a class="btn" href="./">
                    <i class="icon-graph"></i>  Dashboard</a>
                <a class="btn" href="#">
                    <i class="icon-settings"></i>  Settings</a>
            </div>#}
        </li>
    </ol>        
{% endblock %}

{% block body %}
    {% set NameLanguaje = '' %}  
    {% set status = "" %}             
    {% set class = "" %}       
    <div class="card">
        <div class="card-header">
            <strong>Details Country</strong>
            <a title="DELETE" href="{{ path('country_delete', { 'id': country.id }) }}" class="btn btn-danger" onclick="return confirm('¿Be sure to eliminate the country?');" style="; float: right"><i class="fas fa-minus-circle"></i> </a>
            <strong style="float: right">&nbsp;&nbsp;</strong>
            <a align="right" title="EDIT" href="{{ path('country_edit', { 'id': country.id }) }}" class="btn btn-default"  style="background-color: #a1c9c2; color: black; float: right"><i class="fas fa-edit"></i> </a>            
        </div>        
        <div class="card-body">
            <div class="panel panel-body">
                {% for ArrayLanguaje in  ArrayLanguajes %}
                    {% if country.languaje == loop.index-1 %}
                        {% set NameLanguaje =  ArrayLanguaje.name%}  
                    {% endif %}
                {% endfor %}                
                {% if country.active == true %}
                    {% set status = "ACTIVE" %}             
                    {% set class = "badge badge-success" %}   
                {% else %}    
                    {% set status = "INACTIVE" %}
                    {% set class = "badge badge-danger" %}   
                {% endif %}
                <table class="table table-responsive-sm table-bordered table-striped table-sm">
                    <tr>
                        <td align = "justify" style="width: 50px"><b>Country</b></td>
                        <td align = "justify" style="width: 50px">{{country.name}}</td>                        
                    </tr>                    
                    <tr>
                        <td align = "justify" style="width: 50px"><b>Time Zone</b></td>
                        <td align = "justify" style="width: 50px">{{country.timezone}}</td>                                                
                    </tr>                    
                    <tr>
                        <td align = "justify" style="width: 50px"><b>Acronym</b></td>
                        <td align = "justify" style="width: 50px">{{country.acronym}}</td>                        
                    </tr>                    
                    <tr>
                        <td align = "justify" style="width: 50px"><b>Coin</b></td>
                        <td align = "justify" style="width: 50px">{{country.coin}}</td>                        
                    </tr>                    
                    <tr>
                        <td align = "justify" style="width: 50px"><b>Currency Symbol</b></td>
                        <td align = "justify" style="width: 50px">{{country.currencySymbol}}</td>                        
                    </tr>                    
                    <tr>
                        <td align = "justify" style="width: 50px"><b>Tax Rate</b></td>
                        <td align = "justify" style="width: 50px">{{country.taxRate}}</td>                        
                    </tr>                    
                    <tr>
                        <td align = "justify" style="width: 50px"><b>Telephone Prefix</b></td>
                        <td align = "justify" style="width: 50px">{{country.telephonePrefix}}</td>                        
                    </tr>                    
                    <tr>
                        <td align = "justify" style="width: 50px"><b>Acronym</b></td>
                        <td align = "justify" style="width: 50px">{{country.acronym}}</td>                        
                    </tr>                    
                    <tr>
                        <td align = "justify" style="width: 50px"><b>Languaje</b></td>
                        <td align = "justify" style="width: 50px">{{NameLanguaje}}</td>                        
                    </tr>                    
                    <tr>
                        <td align = "justify" style="width: 50px"><b>Status</b></td>
                        <td align = "justify" style="width: 50px"><span class = "{{class}}">{{status}}</span></td>                        
                    </tr>                    
                    <tr>
                        <td align = "justify" style="width: 50px"><b>Provinces</b></td>
                        {#                        <td align = "center" style="width: 50px"><button id="Btn" title="View Provinces" class="btn btn-info"><i class="fas fa-eye"></i></button></td>                        #}
                        <td align = "justify" style="width: 50px"><button id="Btn" title="View Provinces" class="btn btn-primary btn-sm"><b>View</b></button></td>                        
                    </tr>                    
                    <tr>
                        <td align = "justify" style="width: 50px"><b>Issuing bank</b></td>
                        <td align = "justify" style="width: 50px"><button type="button" class="issuingbank-popover btn btn-primary btn-sm" data-container="body" data-toggle="popover" data-placement="right" title="Issuing bank" data-content="{{ country.issuingbank|join(' | ') }}"><b>View</b></button></td>                                                
                    </tr>                    
                    <tr>
                        <td align = "justify" style="width: 50px"><b>Receiving bank</b></td>
                        <td align = "justify" style="width: 50px"><button type="button" class="receivingbank-popover btn btn-primary btn-sm" data-container="body" data-toggle="popover" data-placement="right" title="Receiving bank" data-content="{{ country.receivingbank|join(' | ') }}"><b>View</b></button></td>                                                
                    </tr>                    
                    <tr>
                        <td align = "justify" style="width: 50px"><b>Way to pay</b></td>
                        <td align = "justify" style="width: 100px"><button type="button" class="receivingbank-popover btn btn-primary btn-sm" data-container="body" data-toggle="popover" data-placement="right" title="Way to pay" data-content="{{ country.waytopay|join(' | ') }}"><b>View</b></button></td>                                                
                    </tr>                    
                </table>  
                <div id="lamascara" class="mascara">
                    <div class="contenido" style="">
                        <span class="close">&times;</span><br><br>
                        <table class="table table-responsive-sm table-striped scrolled-wrapper">
                            <tr> 
                                <td align="center"><b>Province/City</b></td>    
                                <td align="center"><b>Status</b></td>                                        
                            </tr>         
                                  
                             {% for infoProvinces in  country.provinces %}
                                 {% if infoProvinces.active == true %}
                                     {% set status = "ACTIVE" %}             
                                     {% set class = "badge badge-success" %}   
                                 {% else %}    
                                     {% set status = "INACTIVE" %}
                                     {% set class = "badge badge-danger" %}   
                                 {% endif %}
                                 <tr> 
                                     <td align="center">{{infoProvinces.name}}</td>                                 
                                     <td align="center"><span class = "{{class}}">{{status}}</span></td>            
                                 </tr>     
                             {% endfor %}
                        </table>  
                    </div>
                </div>
            </div>
            <a class="btn btn-primary" href="{{ path('country_list') }}">Return</a>
        </div>

    </div>
    <style type="text/css">
        .mascara {
            display: none; 
            position: fixed; 
            z-index: 1; 
            padding-top: 100px; 
            left: 0;
            top: 0;
            width: 100%; 
            height: 100%; 
            overflow: auto; 
            background-color: rgb(0,0,0); 
            background-color: rgba(0,0,0,0.4); 
            -webkit-transition: opacity 400ms ease-in;
            -moz-transition: opacity 400ms ease-in;
            transition: opacity 400ms ease-in;
            pointer-events: auto;
        }
        .mascara > div {
            width: 500px;
            top: -25%;
            position: relative;
            margin: 10% auto;
            padding: 5px 20px 13px 20px;
            border-radius: 10px;
            background: #e3e3e4;  /* fallback for old browsers */
            {#background: -webkit-linear-gradient(to left, #FFFFFF, #FFEFBA);  /* Chrome 10-25, Safari 5.1-6 */
            background: linear-gradient(to left, #FFFFFF, #FFEFBA); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
            -webkit-transition: opacity 400ms ease-in;
            -moz-transition: opacity 400ms ease-in;#}
            transition: opacity 400ms ease-in;
        }
        .contenido {
            background-color: #fefefe;
            margin: auto;
            padding: 20px;
            border: 1px solid #888;
            width: 50%;  
            height: auto;
            overflow-y: auto;
            -webkit-animation-name: animatetop;
            -webkit-animation-duration: 0.4s;
            animation-name: animatetop;
            animation-duration: 0.4s
        }
        /* Add Animation */
        @-webkit-keyframes animatetop {
            from {top:-300px; opacity:0} 
            to {top:0; opacity:1}
        }

        @keyframes animatetop {
            from {top:-300px; opacity:0}
            to {top:0; opacity:1}
        }
        {#.close {
            background: #000;
            color: #FFFFFF;
            line-height: 25px;
            position: absolute;
            right: -12px;
            text-align: center;
            top: -10px;
            width: 24px;
            text-decoration: none;
            font-weight: bold;
            -webkit-border-radius: 12px;
            -moz-border-radius: 12px;
            border-radius: 12px;
            -moz-box-shadow: 1px 1px 3px #000;
            -webkit-box-shadow: 1px 1px 3px #000;
            box-shadow: 1px 1px 3px #000;
        }
        .close:hover { background: #00d9ff; }
        .close:focus {
            color: #000;
            text-decoration: none;
            cursor: pointer;
        }#}
        /* The Close Button */
        .close {
            color: #000;
            float: end;
            font-size: 30px;
            font-weight: bold;
            background: #000;
            color: #FFFFFF;
            line-height: 25px;
            position: absolute;
            right: 20px;
            text-align: center;
            top: 10px;
            width: 34px;
            text-decoration: none;
            font-weight: bold;
            -webkit-border-radius: 12px;
            -moz-border-radius: 12px;
            border-radius: 12px;
            -moz-box-shadow: 1px 1px 3px #000;
            -webkit-box-shadow: 1px 1px 3px #000;
            box-shadow: 1px 1px 3px #000;

        }
        .close:hover { background: #00d9ff; }
        .close:focus {
            color: #000;
            text-decoration: none;
            cursor: pointer;
        }
    </style>

    <script type="text/javascript">
        $(document).ready(function () {
            var mascara = document.getElementById('lamascara');
            var btn = document.getElementById("Btn");
            var close = document.getElementsByClassName("close")[0];

            btn.onclick = function () {
                mascara.style.display = "block";
            }
            close.onclick = function () {
                mascara.style.display = "none";
            }
            window.onclick = function (event) {
                if (event.target == mascara) {
                    mascara.style.display = "none";
                }
            }
            $(function () {
                $('.issuingbank-popover').popover({
                    container: 'body'
                })
            })
            $(function () {
                $('.receivingbank-popover').popover({
                    container: 'body'
                })
            })
        });
    </script>  
{% endblock %}