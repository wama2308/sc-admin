{% extends '@App/base.html.twig' %}

{% block ol %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('homepage') }}">Home</a>
        </li>
        <li class="breadcrumb-item active">
            <a href="{{ path('users_list') }}">Users</a>
        </li>
        <li class="breadcrumb-item active">Details</li>
        <!-- Breadcrumb Menu-->
        <li class="breadcrumb-menu d-md-down-none">
            {#<div class="btn-group" role="group" aria-label="Button group">
                <a class="btn" href="#">
                    <i class="icon-speech"></i>
                </a>
                <a class="btn" href="./">
                    <i class="icon-graph"></i>  Dashboard</a>
                <a class="btn" href="#">
                    <i class="icon-settings"></i>  Settings</a>
            </div>#}
        </li>
    </ol>        
{% endblock %}

{% block body %}
    {% set status = "" %}             
    <div class="card">
        <div class="card-header" style="width: 100%; overflow: auto">
            <strong>Datails User</strong>
            <a style="float: right" title="INACTIVE" href="{{ path('delete_user', { 'id': user.id }) }}" class="btn btn-danger" onclick="return confirm('¿Be sure to eliminate the user?');"><i class="fas fa-user-times"></i></a>
            <strong style="float: right">&nbsp;&nbsp;</strong>
            <a title="EDIT" href="{{ path('profile_edit', { 'id': user.id }) }}" class="btn btn-default"  style="background-color: #8080F5; color: black; float: right"><i class="fas fa-user-circle"></i></a>
            <strong style="float: right">&nbsp;&nbsp;</strong>
            <a style="float: right" title="CHANGE" href="{{ path('change_password_edit', { 'id': user.id }) }}" class="btn btn-info"><i class="fas fa-key"></i></a>
        </div>      
        <div class="card-body">    
            <div class="panel panel-body">
                {% if user.enabled == true %}
                    {% set status = "ACTIVE" %}             
                    {% set class = "badge badge-success" %}   
                {% else %}    
                    {% set status = "INACTIVE" %}
                    {% set class = "badge badge-danger" %}   
                {% endif %} 

                <table class="table table-responsive-sm table-bordered table-striped table-sm">
                    <tr>
                        <td align = "justify" style="width: 150px"><b>Username</b></td>
                        <td align = "justify" style="width: 50px">{{user.username}}</td>                        
                    </tr>                    
                    <tr>
                        <td align = "justify" style="width: 150px"><b>Email</b></td>
                        <td align = "justify" style="width: 50px">{{user.email}}</td>                                                
                    </tr>          
                    <tr>
                        <td align = "justify" style="width: 150px"><b>Status</b></td>
                        <td align = "justify" style="width: 50px"><span class = "{{class}}">{{status}}</span></td>                        
                    </tr>  
                </table> 
            </div>
            <a class="btn btn-primary" href="{{ path('users_list') }}">Return</a>
        </div>

    </div>    


{% endblock %}