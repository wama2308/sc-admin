{% block body %}
    <div class="card">
        <div class="card-header">
            <a class="btn btn-primary" href="{{ path('license_create') }}" role="button"><i class="fas fa-plus-circle"></i> </a>&nbsp;&nbsp;&nbsp;&nbsp;          
            <strong>List Licenses</strong>
            {#            <small>List</small>#}
        </div>        
        <div class="card-body" style="overflow-x: auto">  
            <div></div>

            <table id="tableLicense" class="table table-responsive-sm table-striped" style=""> 
                <thead> 
                    <tr> 
                        <th>License</th>    
                        {#<th>Users Quantity</th>    
                        <th>Number of Clients</th>    
                        <th>Number of Exams</th> #}   
                        <th>Duration</th>    
                        <th>Amount</th>                                    
                        <th>Status</th>                                    
{#                        <th>Accion</th>                                                                                                    #}
                    </tr> 
                </thead> 
                <tbody> 
                    {% for licenses in licenses %}   
                        {% if licenses.active == true %}
                            {% set status = "ACTIVE" %}             
                            {% set class = "badge badge-success" %}   
                        {% else %}    
                            {% set status = "INACTIVE" %}
                            {% set class = "badge badge-danger" %}   
                        {% endif %}
                        <tr> 
                            <td><a title="View Details" class="nav-link" href="{{ path('license_details', { 'id': licenses.id }) }}">{{licenses.license}}</a></td>                                 
                            {#<td>{{licenses.usersquantity}}</td>                                 
                            <td>{{licenses.numberclients}}</td>                                 
                            <td>{{licenses.numberexams}}</td>   #}                              
                            <td>{{licenses.durationtime}}</td>                                                                                      
                            <td>{{licenses.amount}}</td>                                 
                            <td><span class = "{{class}}">{{status}}</span></td>                                 
                            {#<td style="">
                                <a title="VIEW" href="{{ path('license_details', { 'id': licenses.id }) }}" class="btn btn-info"><i class="fas fa-eye"></i> </a>
                                <a title="EDIT" href="{{ path('license_edit', { 'id': licenses.id }) }}" class="btn btn-default"  style="background-color: #a1c9c2; color: black "><i class="fas fa-edit"></i> </a>
                                <a title="DELETE" href="{{ path('license_delete', { 'id': licenses.id }) }}" class="btn btn-danger" onclick="return confirm('¿Be sure to eliminate the license?');"><i class="fas fa-minus-circle"></i> </a>
                            </td> #}
                        </tr>   
                    {% endfor %}
                </tbody> 
            </table>    
        </div>
    </div>
    <script type="text/javascript">
        {#tableCountry#}
        $(document).ready(function () {
            $('#tableLicense')
                    .addClass('nowrap')
                    .dataTable();
        });

    </script>  

{% endblock %}
